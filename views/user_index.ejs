<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
#body
{
  margin-left: 1%;
  margin-right: 1%;
}

  #button1
  {
    margin-left: 1%;
    border: black;
    text-align: center;
    display: inline-block;
    font-size: 16px;
    margin-top: 12px;
    padding: 12px 28px;
    text-decoration: none;
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    border-radius: 7px;


  }
  #button
  {
    border: black;
    text-align: center;
    display: inline-block;
    font-size: 16px;
    margin-top: 12px;
    padding: 4px 20px;
    text-decoration: none;
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    border-radius: 7px;

  }
  table {
    font-family:sans-serif;
    border-radius: 1px;
  }
  th, td {

      text-align:left;
      &:nth-child(2) {
        text-align:right;
      }
    }
    td {
      background-color:#eee;
    }
    th {
      background-color:#444444;
      color:#fff;
    }
  }

  .zigzag {
    border-collapse:separate;
    tbody tr:nth-child(odd) {

    }
    thead tr,
    tbody tr:nth-child(even) {

    }
  }

  #searchbox
  {

    margin-left: 0%;
    padding: 12px;
    border-radius: 10px;
    background-color: #E8F6EF;
  }
  #subbut
  {
    border: black;
    text-align: center;
    display: inline-block;
    font-size: 16px;
    margin-top: 12px;
    padding: 4px 20px;
    text-decoration: none;
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    border-radius: 7px;
  }


  </style>
  </head>
<body>

<div class="container" >
  <h2><%= title %></h2>
  <a href="/add" class="btn btn-sm btn-primary" id="button1"><strong>Add Incident</strong></a>
  <br/><br/>

  <table class="table table-dark table-striped">

    <thead>
      <tr>
        <th> ID </th>
        <th>REPORDED BY</th>
        <th>DTAE OF REPORT</th>
        <th>TITLR/ROLE</th>
        <th>INCIDENT NO</th>
        <th>INCIDENT TYPE</th>
        <th>DATE OF INCIDENT</th>
        <th>LOCATION</th>
        <th>CITY</th>
        <th>STATE</th>
        <th>ZIPCODE</th>
        <th>INCIDENT DESCRIPTION</th>
        <th>FOLLOW-UP ACTION</th>
        <th>ACTION</th>

      </tr>
    </thead>
    <tbody>
        <% incident.forEach(function(incidents){ %>
            <tr>
                <td><%= incidents.id %></td>
                <td><%= incidents.reported_by %></td>
                <td><%= incidents.date_of_report %></td>
                <td><%= incidents.title_role%></td>
                <td><%= incidents.incident_no %></td>
                <td><%= incidents.incident_type%></td>
                <td><%= incidents.date_of_incident%></td>
                <td><%= incidents.location%></td>
                <td><%= incidents.city%></td>
                <td><%= incidents.state%></td>
                <td><%= incidents.zipe_code%></td>
                <td><%= incidents.incident_description%></td>
                <td><%= incidents.followup_action%></td>
                <td>
                    <a href="edit/<%= incidents.id %>" class="btn btn-sm btn-primary" id="button">Edit</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
  </table>
</div>

</body>
</html>
