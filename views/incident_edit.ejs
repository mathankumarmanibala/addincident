<body>

<div class="container">
  <h3 > EDIT INCIDENT</h3>



  <form action="/update" method="post" autocomplete="off" >
    <input type="hidden" value="<%= incident.id %>" name="id">
    <div class="form-group">
      <label for="reportedby" id="report1">REPORTED BY:</label>
      <input type="text" class="form-control" id="reportedby" placeholder=" Reported By " value="<%= incident.reported_by %>" name="reportedby" required>
      <label for="dateofreport" id="datereport">DATE OF REPORT:</label>
      <input type="date" class="form-control" id="dateofreport" placeholder="" value="<%= incident.date_of_report %>" name="dateofreport" required>
<br>
      <label for="titlerole">TITLE/ROLE:</label>
      <input type="text" class="form-control" id="titlerole" placeholder="Title/Role" value="<%= incident.title_role%>"  name="titlerole" required>
      <label for="incidentno" id="incno">INCIDENT NO:</label>
      <input type="text" class="form-control" id="incidentno" placeholder="Incident No" value="<%= incident.incident_no %>" name="incidentno" required>

    </div>
    <h3 id="h3">INCIDENT INFORMATION</h3>
    <div class="form-group">
      <label for="incidenttype">INCIDENT TYPE:</label>
      <input type="text" class="form-control" id="incidenttype" placeholder="Incident Type" value="<%= incident.incident_type%>" name="incidenttype" required>
      <label for="dateofincident" id="dateins"> DATE OF INCIDENT:</label>
      <input type="date" class="form-control" id="dateofincident" placeholder="Date of Incident" value="<%= incident.date_of_incident%>" name="dateofincident" required>
<br>
      <label for="location">LOCATION:</label>
      <input type="text" class="form-control" id="location" placeholder="Location" value="<%= incident.location%>" name="location" required>
    <br>
      <label for="city">CITY:</label>
      <select name="city"  id="city" name="city" value="<%= incident.city%>" required >
          <option>--Select-City--</option>
          <option>Pollachi</option>
          <option >Coimbatore</option>
          <option >Chennai</option>
          <option >Selam</option>
          <option>Thrichy</option>
          <option>Bangaloru</option>
      </select>
      <label for="state" id="stat">STATE:</label>
      <select name="state"  id="state" name="state" value="<%= incident.state%>" required>
          <option >--Select-State--</option>
          <option>Tamil Nadu</option>
          <option>Kerala</option>
            <option>Bangalore</option>
          <option>Andhra Pradesh</option>
          <option>Telengana</option>
      </select>
      <label for="zipcode" id="zipcod">ZIP CODE:</label>
      <input type="text" class="form-control" id="zipcode" size="6" placeholder="Zip Code" value="<%= incident.zipe_code%>" name="zipcode" required>

    </div>
    <hr>
    <div>
        <label for="description">INCIDENT DESCRIPTION</label><br>
        <textarea id="description" name="description" cols="100" rows="5" placeholder="Incident Description"  style="background-color: #DBE6FD;"  required><%= incident.incident_description%></textarea>
        <br>
        <label for="followupaction">FOLLOW-UP ACTION:</label><br>
        <textarea id="followupaction" name="followupaction" cols="100" rows="5" placeholder="Follow-Up Action" style="background-color: #DBE6FD;" required><%= incident.followup_action%></textarea>
        <br>
        <button type="submit" class="btn btn-primary" id="but">Submit</button>
    </div>
  </form>



